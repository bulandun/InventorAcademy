{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",

  "functions": {
    "dist/server/index.js": { "runtime": "nodejs20.x" }
  },

  "routes": [
    { "src": "/api/(.*)", "dest": "dist/server/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/dist/public/$1" }
  ]
}
